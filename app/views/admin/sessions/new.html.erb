<div class="row">
  <div class="col-xs-offset-1 col-xs-11">
  <h2 class="head-line title_h2 text-left">管理者ログイン</h2>

  <%= form_with model: @admin, url: admin_session_path do |f| %>
    <div class="field form-group col-xs-9">
      <%= f.label :"メールアドレス", class: "col-sm-5 control-label" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-sm-6 form-control-static" %>
    </div>

    <div class="field form-group col-xs-9">
      <%= f.label :"パスワード", class: "col-sm-4 control-label" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "col-sm-6 form-control-static" %>
    </div>

    <div class="actions col-xs-6">
      <%= f.submit "ログイン", class: "btn btn-info pull-right btn-lg" %>
    </div>
  <% end %>

  <%= render "admin/shared/links" %>
  </div>
</div>
