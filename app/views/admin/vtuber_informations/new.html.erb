<%= form_with model: @vtuber_information, url: admin_vtuber_informations_path do |f| %>
  <div class="container">
    <h2 class="toppage-head">VTuber新規登録</h2>
    <div class="row my-3">
      <div class="col-sm-8 col-md-8 col-lg-5 offset-sm-2 offset-md-2 offset-lg-1 py-5">
        <div class="mb-5 py-5">
          <%= f.file_field :image, accept: "image/*" %>
        </div>
      </div>
      <div class="col-sm-10 col-md-8 col-lg-5 offset-sm-1 offset-md-2 offset-lg-0 py-5 pt-5">
        <%= link_to :back do %>
          <button>戻る</button>
        <% end %>
        <%= f.submit "新規登録" %>
        <div class="row my-5">
          <div class="col-12">
            <table class="table">
              <tr>
                <td style="width: 30%" >名前</td>
                <td style="width: 70%"><%= f.text_field :vtuber_name %></td>
              </tr>
              <tr></tr>
              <tr>
                <td style="width: 30%">YouTube</td>
                <td style="width: 70%"><%= f.text_field :youtube_name %></td>
              </tr>
              <tr>
                <td style="width: 30%">Twitter</td>
                <td style="width: 70%"><%= f.text_field :twitter_name %></td>
              </tr>
              <tr>
                <td style="width: 30%">ハッシュタグ</td>
                <td style="width: 70%"><%= f.text_field :tag_name %></td>
              </tr>
              <tr>
                <td style="width: 30%">ファンネーム</td>
                <td style="width: 70%"><%= f.text_field :fan_name %></td>
              </tr>
              <tr>
                <td style="width: 30%">推しマーク</td>
                <td style="width: 70%"><%= f.text_field :mark %></td>
              </tr>
              <tr>
                <td style="width: 30%">公式カラー</td>
                <td style="width: 70%"><%= f.text_field :color %></td>
              </tr>
              <tr>
                <td style="width: 30%">身長</td>
                <td style="width: 70%"><%= f.text_field :height %></td>
              </tr>
              <tr>
                <td style="width: 30%">血液型</td>
                <td style="width: 70%"><%= f.text_field :blood_type %></td>
              </tr>
              <tr>
                <td style="width: 30%">誕生日</td>
                <td style="width: 70%"><%= f.text_field :birthday %></td>
              </tr>
              <tr>
                <td style="width: 30%">初配信日</td>
                <td style="width: 70%"><%= f.text_field :first_delivery %></td>
              </tr>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
