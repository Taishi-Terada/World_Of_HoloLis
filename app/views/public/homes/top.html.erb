<div class="container">
  <%= flash[:notice]%>
  <div class="row">
    <div class="col-md-3">
      <%= render 'public/vtuber_communities/vtuber_community_each', vtuber_communities: @vtuber_communities %>
    </div>
    <div class="col-md-9">
      <h2 class="toppage-head">最新ニュース</h2>
      <div class='home__main'>
        <% @news.each do |news| %>
          <div class="card mb-3 w-75 mx-auto">
            <div class="row no-gutters">
              <div class="col-md-6">
                <% if news.image.attached? %>
                  <%= image_tag news.image, size: "300x200" %>
                <% else %>
                  <%= image_tag 'no_image', size: "300x200" %>
                <% end %>
              </div>
              <div class="col-md-6">
                <div class="card-body">
                  <h5 class="card-title"><%= news.news_name %></h5>
                  <p class="card-text"><%= news.news_introduction %></p>
                  <p class="card-text"><small class="text-muted"><%= news.created_at.strftime('%Y/%m/%d') %></small></p>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
      <div class="text-center"><%= paginate(@news) %></div>
    </div>
  </div>
</div>