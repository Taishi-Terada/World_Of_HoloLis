<div class="row">
  <div class="col-xs-offset-1 col-xs-11">
    <h2 class="head-line title_h2 text-left">新規会員登録</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>
  
      <div class="field form-group col-xs-12">
        <%= f.label :"ユーザー名", class: "col-sm-2 control-label" %>
        <%= f.text_field :name, autofocus: true, class: "col-sm-3 form-control-static name" %>
      </div>
  
      <div class="form-group col-xs-9">
        <%= f.label :"メールアドレス", class: "col-sm-4 control-label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-sm-6 form-control-static" %>
      </div>

      <div class="field form-group col-xs-9">
        <%= f.label :"パスワード(6文字以上)", class: "col-sm-4 control-label" %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", class: "col-sm-4 form-control-static" %>
      </div>

      <div class="field form-group col-xs-9">
        <%= f.label :"パスワード(確認用)", class: "col-sm-4 control-label" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "col-sm-4 form-control-static" %>
      </div>

      <div class="actions col-xs-9">
        <%= f.submit "新規登録",class: 'btn btn-success btn-lg col-sm-4' %>
      </div>
      
    <% end %>
    
    <div class="col-xs-9">
      <h2 class="head-line title_h2 text-left">既に登録済みの方</h2>
      <p class="new-link"><%= render "public/shared/links" %>からログインしてください。</p>
    </div>
  </div>
</div>