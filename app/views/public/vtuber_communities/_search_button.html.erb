      <%= f.text_field :content, class: 'form-control w-75', placeholder: "ハッシュタグ検索"  %>
      <%= f.button :type => "submit" do %>
        <i class="fas fa-search"></i>
      <% end %>
    </div>
  <% end %>
</div>