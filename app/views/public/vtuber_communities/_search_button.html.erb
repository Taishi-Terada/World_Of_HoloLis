<div class="col-lg-3">
  <%= form_with url: search_vtuber_communities_path, method: :get, local: true do |f| %>
    <div class="form-inline">
      <%= f.text_field :search, class: 'form-control w-75', placeholder: "キーワード検索"  %>
      <%= f.button :type => "submit" do %>
        <i class="fas fa-search"></i>
      <% end %>
    </div>
  <% end %>
</div>
<div class="col-lg-3">
  <%= form_with url: tagsearch_vtuber_communities_path, method: :get, local: true do |f| %>
